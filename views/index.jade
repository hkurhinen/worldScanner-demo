doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title WorldScanner Demo
    link(rel='stylesheet', href='http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.css')
  body
    .controls
      label(for='ne-lat') NE-LAT:
      input#ne-lat(type='text', value='69')
      label(for='ne-lng') NE-LNG:
      input#ne-lng(type='text', value='31')
      label(for='sw-lat') SW-LAT:
      input#sw-lat(type='text', value='60')
      label(for='ne-lat') SW-LNG:
      input#sw-lng(type='text', value='20')
      button#scanBtn Scan
    .info
      p Areas remaining: 
        span#areas-remaining
    #map(style='width:100%;height:600px')
    script(src='https://code.jquery.com/jquery-2.2.3.min.js', integrity='sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=', crossorigin='anonymous')
    script(src='http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js')
    script(type='text/javascript', src='http://maps.stamen.com/js/tile.stamen.js?v1.3.0')
    script(src='/socket.io/socket.io.js')
    script(src='js/main.js')